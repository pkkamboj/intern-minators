<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_landin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:fontFamily="@font/roboto">

    <TextView
        android:id="@+id/addressUser"
        android:layout_width="1600px"
        android:layout_height="wrap_content"
        android:layout_marginTop="487px"
        android:gravity="center_horizontal|top"
        android:text="Hello,\nJohn Smith"
        android:textAppearance="@style/hello_usern"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question"
        android:layout_width="1600px"
        android:layout_height="192px"
        android:layout_marginTop="1008px"
        android:gravity="center_horizontal|top"
        android:text="@string/what_would_"
        android:textAppearance="@style/what_would_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/facCreateActivity"
        android:layout_width="1225px"
        android:layout_height="325px"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/purple_rectangle"
        android:onClick="clickCreateActivity"
        android:text="Create Event"
        android:textAppearance="@style/book_activi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/facMyEvents"
        android:layout_width="1225px"
        android:layout_height="325px"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="880dp"
        android:background="@drawable/purple_rectangle"
        android:onClick="clickMyEvents"
        android:text="My Events"
        android:textAppearance="@style/book_activi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
